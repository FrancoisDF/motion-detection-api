{
  "apps": [
    {
      "name": "motion-detection-api",
      "script": "./build/index.js",
      "watch": false,
      "env": {
        "NODE_ENV": "production",
        "PORT": 5000
      },
      "autorestart": true,
      "instances": 1,
      "max_memory_restart" : "500M",
      "log_date_format": "DD.MM.YYYY HH:mm Z",
      "error_file": "../logs/pm2/error.log",
      "out_file": "../logs/pm2/out.log"
    }
  ]
}
